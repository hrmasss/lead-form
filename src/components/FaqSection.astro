---
import { cn } from "@/lib/utils";
import { faqs } from "@config";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<div class={cn("p-4 sm:p-6", className)}>
    <div class="text-center mb-7 pb-5 border-b">
        <h2
            class="max-w-2xl mx-auto text-2xl font-bold md:text-3xl md:leading-tight">
            Frequently Asked Questions
        </h2>
    </div>

    <div class="grid sm:grid-cols-2 gap-6 md:gap-12">
        {
            faqs.map((faq) => (
                <div>
                    <h3 class="text-lg font-semibold">{faq.question}</h3>
                    <p class="mt-2 text-foreground/60">{faq.answer}</p>
                </div>
            ))
        }
    </div>
</div>
