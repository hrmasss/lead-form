---
import { cn } from "@/lib/utils";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<form
    class={cn(
        "flex flex-col border bg-card rounded-xl p-4 sm:p-6 lg:p-8 space-y-4",
        className
    )}>
    <div>
        <label
            for="name"
            class="sr-only"
            >Full name</label
        >
        <input
            type="text"
            name="name"
            id="name"
            placeholder="Full name"
            class="py-3 px-4 block w-full border rounded-lg text-sm bg-inherit focus:border-primary focus:ring-2 ring-primary disabled:opacity-50 disabled:pointer-events-none outline-none"
        />
    </div>

    <div class="grid sm:grid-cols-2 gap-4">
        <div>
            <label
                for="email"
                class="sr-only"
                >Email</label
            >
            <input
                type="email"
                name="email"
                id="email"
                autocomplete="email"
                placeholder="Email"
                class="py-3 px-4 block w-full border rounded-lg text-sm bg-inherit focus:border-primary focus:ring-2 ring-primary disabled:opacity-50 disabled:pointer-events-none outline-none"
            />
        </div>
        <div>
            <label
                for="phone"
                class="sr-only"
                >Phone number</label
            >
            <input
                type="text"
                name="phone"
                id="phone"
                placeholder="Phone number"
                class="py-3 px-4 block w-full border rounded-lg text-sm bg-inherit focus:border-primary focus:ring-2 ring-primary disabled:opacity-50 disabled:pointer-events-none outline-none"
            />
        </div>
    </div>

    <div>
        <label
            for="details"
            class="sr-only"
            >Details</label
        >
        <textarea
            rows="2"
            id="details"
            name="details"
            placeholder="Project details"
            class="py-3 px-4 block w-full border rounded-lg text-sm bg-inherit focus:border-primary focus:ring-2 ring-primary disabled:opacity-50 disabled:pointer-events-none outline-none"
        ></textarea>
    </div>

    <div>
        <label
            for="phone"
            class="sr-only"
            >Project reference</label
        >
        <input
            type="text"
            name="phone"
            id="phone"
            placeholder="Project reference"
            class="py-3 px-4 block w-full border rounded-lg text-sm bg-inherit focus:border-primary focus:ring-2 ring-primary disabled:opacity-50 disabled:pointer-events-none outline-none"
        />
    </div>

    <button
        type="submit"
        class="w-full py-3 px-4 inline-flex justify-center items-center text-sm font-medium rounded-lg bg-primary hover:bg-primary/80 focus:outline-none focus:bg-primary/80 transition text-background"
        >Submit
    </button>

    <p class="text-sm text-foreground/60 text-center">
        We'll get back to you in 2 business days.
    </p>
</form>
